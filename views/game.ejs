<% include partials/header %>

<div class="container">
    <div class="row">
        <h3 class="text-center ml-5 mr-5 mb-2 mt-4"><%= question.title %></h3>
        <% question.options.forEach(function(q, i){ %>
            <div class="col-md-6 mb-3 mt-3">
                <div class="row">
                    <img src="/images/upload/<%= q.img %>" class="img-thumbnail">
                </div>
                <div class="col mt-2"><button class="btn btn-danger" id="option<%= i %>" onclick="compareQuestion(<%= q.correct %> , this.id)"><%= q.text %></button></div>
            </div>
        <% }); %>
    </div>
</div>

<script src="/js/game.js"></script>

<% include partials/footer %>